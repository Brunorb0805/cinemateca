<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.cinemateca">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="br.com.cinemateca.view.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.cinemateca.view.Home.HomeActivity"
            android:label="@string/home_title"
            android:theme="@style/AppTheme.NoActionBar.Menu" />

        <activity
            android:name="br.com.cinemateca.view.Search.SearchActivity"
            android:theme="@style/AppTheme.NoActionBar.Menu" />

        <activity
            android:name="br.com.cinemateca.view.Details.DetailsActivity"
            android:label="@string/info_title"
            android:theme="@style/AppTheme.NoActionBar.Menu"/>
    </application>

</manifest>